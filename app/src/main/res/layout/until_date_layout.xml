<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/do_before_title"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/do_before_date"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textFontWeight="400"
        ></TextView>

    <TextView
        android:id="@+id/date"
        android:fontFamily="@font/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/do_before_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        tools:text="2 июня 2023"
        android:textSize="14sp"
        android:textFontWeight="400"
        android:textColor="#007AFF"
        ></TextView>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/toggle"
        android:layout_width="40dp"
        android:layout_height="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:checked="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26.5dp"
        android:layout_marginEnd="16dp"
        app:thumbTint="@color/thumb_colors"
        app:trackTint="@color/track_colors"
        >
    </com.google.android.material.switchmaterial.SwitchMaterial>

</androidx.constraintlayout.widget.ConstraintLayout>