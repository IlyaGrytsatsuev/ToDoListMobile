<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background"
    android:minHeight="72dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/complete_state"
        android:src="@drawable/important_undone_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"

        ></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/important_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/important_icon"
        app:layout_constraintStart_toEndOf="@id/complete_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_text"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        ></androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/important_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="12dp"
        android:maxLines="3"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#000000"
        tools:text="Hfjfl;lmefweflkkwefmwed;wmdwel;d,we;ldwfklef kfwed;lmwd;ldew;lwmed;wedmwe;dmwe;wedwmdweew;lmweew;lwewe;lewmwe;lmewwelmwe;lewew;lmew;lmwewe;lwe;lmwe;lmew;lwe;lmwe;ewlm"
        />

</androidx.constraintlayout.widget.ConstraintLayout>